@model IEnumerable<BOOKING.Models.Reservation>
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />


<h2>Lista rezerwacji</h2>
<html>
<head>
    <style>
        h2 {
            color: white;
            background-color: rgb(30,30,30, 1);
            padding: 0.5em;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 0px 0px 20px 0px black;
            width: 60%;
            text-align: center;
        }
        .li{
            color: white;
            background-color: rgb(30,30,30, 1);
            box-shadow: 0px 0px 20px 0px black;
            padding: 1em;
            margin-top: 1.5em;
        }
    </style>
</head>
</html>
<ol>
    @foreach (var reservation in Model)
    {
        <li class="li">
            <b>@reservation.Name</b> @reservation.secondName | @reservation.Start - @reservation.End | @reservation.ProductId - @reservation.CustomerId
            
        </li>
    }
</ol>