@model BOOKING.Models.Register


<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
<html>
<head>
    <style>
        .box {
            color: white;
            background-color: rgb(30,30,30, 1);
            padding: 2em;
            box-shadow: 0px 0px 20px 0px black;
            width: 35%;
            text-align: center;
        }
        .titleRegister {
            color: white;
            background-color: rgb(30,30,30, 1);
            padding: 0.5em;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 0px 0px 20px 0px black;
            width: 60%;
            text-align: center;
        }
        .input-container{
            padding-top: 1.5em;
            padding-bottom: 0.5em;
        }
        .userName, .Email, .Password{
            font-size: 18px;
        }
    </style>
</head>
</html>
<h2 class="titleRegister">Rejestracja</h2>
<div class="box">
	<form method="post" asp-controller="Account" asp-action="Register">
		<h2>@Html.ValidationSummary()</h2>
		<div class="input-container">
			@Html.TextBoxFor(x => x.userName)
            <label><p class="userName">Login</p></label>
		</div>
		<div class="input-container">            
			@Html.TextBoxFor(x => x.Email)
            <label><p class="Email">E-mail</p></label>
		</div>
		<div class="input-container">           
			@Html.PasswordFor(x => x.Password)
            <label><p class="Password">Hasło</p></label>
		</div>
		<button type="submit" class="btn">Zarejestruj</button>
	</form>
</div>